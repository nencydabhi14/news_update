<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/offblack"
    tools:context=".Screen.Skipped_Page">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <org.imaginativeworld.whynotimagecarousel.ImageCarousel
            android:id="@+id/carousel"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            app:autoPlay="true"
            app:autoPlayDelay="3000"
            app:carouselBackground="#00000000"
            app:imageScaleType="centerCrop"
            app:infiniteCarousel="true" />

        <TextView
            android:id="@+id/conatin1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/carousel"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/quicksandsemibold"
            android:gravity="center"
            android:padding="10dp"
            android:text="National &amp; Local News from Trusted Publishers"
            android:textColor="@color/white"
            android:textSize="18dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/conatin1"
            android:layout_centerInParent="true"
            android:fontFamily="@font/quicksandsemibold"
            android:gravity="center"
            android:text="Welcome To app..!!"
            android:textColor="@color/white"
            android:textSize="18dp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/skip_txt"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:background="@drawable/ripaleffect"
        android:fontFamily="@font/quicksandsemibold"
        android:gravity="center"
        android:text="Next >>"
        android:textColor="@color/white"
        android:textSize="17dp" />

</RelativeLayout>