<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="175dp"
    android:background="@color/black"
    android:layout_gravity="center">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/corner_details">

        <ImageView
            android:id="@+id/line"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/linedialog"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line"
            android:layout_marginTop="10dp">


            <RelativeLayout
                android:id="@+id/like_page"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@drawable/ripaleffect"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/like_img"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/likedialog" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@+id/like_img"
                    android:text="Like"
                    android:textColor="@color/white"
                    android:textSize="16dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/save_page"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_below="@+id/like_page"
                android:background="@drawable/ripaleffect"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/save_img"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="10dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/savedialog" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@+id/save_img"
                    android:text="Save"
                    android:textColor="@color/white"
                    android:textSize="16dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/logout_page"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_below="@+id/save_page"
                android:layout_marginStart="10dp"
                android:visibility="gone"
                android:background="@drawable/ripaleffect"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/logout_img"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/logout" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@+id/logout_img"
                    android:text="Logout"
                    android:textColor="@color/white"
                    android:textSize="16dp" />
            </RelativeLayout>



        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>