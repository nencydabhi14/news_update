<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/offblack"
    tools:context=".Fragments.Business_Fragment">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/shimmer1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/contain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">


                <androidx.cardview.widget.CardView
                    android:id="@+id/news_img"
                    android:layout_width="150dp"
                    android:layout_height="135dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="10dp"
                    android:backgroundTint="#A5A5A5"
                    app:cardCornerRadius="15dp" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/txt1"
                    android:layout_width="200dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:backgroundTint="#A5A5A5"
                    app:cardCornerRadius="5dp" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/description_Card"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:layout_below="@id/txt1"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:backgroundTint="#A5A5A5"
                    app:cardCornerRadius="5dp" />

                <RelativeLayout
                    android:id="@+id/l1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/news_img"
                    android:padding="10dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="10dp"
                        android:backgroundTint="#A5A5A5"
                        app:cardCornerRadius="10dp" />
                </RelativeLayout>


                <View
                    android:id="@+id/view"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/l1"
                    android:background="#A5A5A5" />
            </RelativeLayout>


        </com.facebook.shimmer.ShimmerFrameLayout>

        <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/shimmer2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/shimmer1">

            <RelativeLayout
                android:id="@+id/contain2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/news_img2"
                    android:layout_width="150dp"
                    android:layout_height="135dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="10dp"
                    android:backgroundTint="#A5A5A5"
                    app:cardCornerRadius="15dp" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/txt2"
                    android:layout_width="200dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:backgroundTint="#A5A5A5"
                    app:cardCornerRadius="5dp" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/description_Card2"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:layout_below="@id/txt2"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:backgroundTint="#A5A5A5"
                    app:cardCornerRadius="5dp" />


                <RelativeLayout
                    android:id="@+id/l2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/news_img2"
                    android:padding="10dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="10dp"
                        android:backgroundTint="#A5A5A5"
                        app:cardCornerRadius="10dp" />
                </RelativeLayout>


                <View
                    android:id="@+id/view2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/l2"
                    android:background="#A5A5A5" />


            </RelativeLayout>


        </com.facebook.shimmer.ShimmerFrameLayout>

        <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/shimmer3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/shimmer2"
            android:layout_marginTop="10dp">

            <RelativeLayout
                android:id="@+id/contain3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/news_img3"
                    android:layout_width="150dp"
                    android:layout_height="135dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="10dp"
                    android:backgroundTint="#A5A5A5"
                    app:cardCornerRadius="15dp" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/txt3"
                    android:layout_width="200dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:backgroundTint="#A5A5A5"
                    app:cardCornerRadius="5dp" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/description_Card3"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:layout_below="@id/txt3"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:backgroundTint="#A5A5A5"
                    app:cardCornerRadius="5dp" />

                <RelativeLayout
                    android:id="@+id/l3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/news_img3"
                    android:padding="10dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="10dp"
                        android:backgroundTint="#A5A5A5"
                        app:cardCornerRadius="10dp" />
                </RelativeLayout>


                <View
                    android:id="@+id/view3"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/l3"
                    android:background="#A5A5A5" />

            </RelativeLayout>

        </com.facebook.shimmer.ShimmerFrameLayout>

        <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/shimmer4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/shimmer3"
            android:layout_marginTop="10dp">

            <RelativeLayout
                android:id="@+id/contain4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/news_img4"
                    android:layout_width="150dp"
                    android:layout_height="135dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="10dp"
                    android:backgroundTint="#A5A5A5"
                    app:cardCornerRadius="15dp" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/txt4"
                    android:layout_width="200dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:backgroundTint="#A5A5A5"
                    app:cardCornerRadius="5dp" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/description_Card4"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:layout_below="@id/txt4"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:backgroundTint="#A5A5A5"
                    app:cardCornerRadius="5dp" />


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:layout_below="@+id/news_img4">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:layout_centerInParent="true"
                        app:cardCornerRadius="10dp"
                        android:layout_marginTop="10dp"
                        android:backgroundTint="#A5A5A5"/>
                </RelativeLayout>


            </RelativeLayout>


        </com.facebook.shimmer.ShimmerFrameLayout>


    </RelativeLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/business_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

</FrameLayout>