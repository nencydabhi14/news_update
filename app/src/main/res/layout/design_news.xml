<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/offblack">

    <RelativeLayout
        android:id="@+id/c2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <RelativeLayout
            android:id="@+id/itm_file_contain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_alignParentEnd="true"
                android:backgroundTint="@color/offblack"
                app:cardCornerRadius="10dp">

                <ImageView
                    android:id="@+id/news_img"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/news_title"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:maxLines="3"
                android:text="Title"
                android:textColor="@color/white"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/news_description"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/news_title"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:maxLines="3"
                android:text="Description"
                android:textColor="@color/white"
                android:textSize="15dp" />
        </RelativeLayout>

        <View
            android:id="@+id/item_view"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@id/itm_file_contain"
            android:layout_marginTop="20dp"
            android:background="@color/dull" />

        <RelativeLayout
            android:id="@+id/c1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_view"
            android:layout_centerInParent="true">

            <RelativeLayout
                android:id="@+id/like_contain"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <RelativeLayout
                    android:id="@+id/like_relative"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true">

                    <ImageView
                        android:id="@+id/like_img"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerVertical="true"
                        android:padding="5dp"
                        android:src="@drawable/like" />

                    <TextView
                        android:id="@+id/like_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="5dp"
                        android:layout_toEndOf="@+id/like_img"
                        android:text="Like"
                        android:textColor="@color/dull"
                        android:textSize="13dp" />
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/share_Contain"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@+id/like_contain">

                <RelativeLayout
                    android:id="@+id/share_relative"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true">

                    <ImageView
                        android:id="@+id/share_img"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerVertical="true"
                        android:padding="5dp"
                        android:src="@drawable/share" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="5dp"
                        android:layout_toEndOf="@+id/share_img"
                        android:text="Share"
                        android:textColor="@color/dull"
                        android:textSize="13dp" />
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/save_contain"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@+id/share_Contain">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true">

                    <ImageView
                        android:id="@+id/save_img"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerVertical="true"
                        android:padding="5dp"
                        android:src="@drawable/save" />

                    <TextView
                        android:id="@+id/save_dtxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="5dp"
                        android:layout_toEndOf="@+id/save_img"
                        android:text="Save"
                        android:textColor="@color/dull"
                        android:textSize="13dp" />


                </RelativeLayout>

            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1.8dp"
        android:layout_below="@id/c2"
        android:background="#8F9091" />

    <TextView
        android:id="@+id/yt_txr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello"
        android:visibility="gone"
        android:textColor="@color/white"
        android:textSize="20dp"/>


    <RelativeLayout
        android:id="@+id/ViewRelative"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_below="@+id/view"
        android:padding="10dp"
        android:layout_height="130dp"
        android:layout_centerInParent="true" />
    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="1.8dp"
        android:visibility="gone"
        android:layout_below="@id/ViewRelative"
        android:background="#8F9091" />


</RelativeLayout>